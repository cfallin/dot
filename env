#!/bin/bash

# common typo
alias evine=evince

export PATH=~/bin:$PATH

alias asdf="setxkbmap dvorak"
alias aoeu="setxkbmap -layout us"

export PIN=/usr/local/pin
export PATH=$PIN:$PATH

# simple history: don't ignore duplicates (default in newer distros)
export HISTCONTROL=""

# start a VNC server
alias vnc="vncserver -geometry 3840x1080 -geometry 1920x1080 -geometry 1280x800"

if [ `hostname` == "xap" ]; then
    # home workstation
    export PATH=/opt/cisco/anyconnect/bin:$PATH
    alias expmount="sshfs atom:/afs/ece/usr/cfallin/exp /home/cfallin/exp"
    alias expumount="fusermount -u /home/cfallin/exp"
    alias dualhead="xrandr --output HDMI1 --auto --output VGA1 --auto --right-of HDMI1"
fi
